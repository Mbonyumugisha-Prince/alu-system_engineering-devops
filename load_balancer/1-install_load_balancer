#!/usr/bin/env bash
# Install and configure HAProxy as load balancer
# Routes traffic to web-01 and web-02 using roundrobin algorithm

# Install HAProxy if not already installed
if ! command -v haproxy &> /dev/null; then
    echo "Installing HAProxy"
    sudo apt-get update -y
    sudo apt-get install -y haproxy
else
    echo "HAProxy is already installed"
fi

# Create HAProxy configuration
sudo cp /etc/haproxy/haproxy.cfg /etc/haproxy/haproxy.cfg.backup

# Write new configuration
cat > haproxy.cfg << EOF
global
    log /dev/log local0
    log /dev/log local1 notice
    chroot /var/lib/haproxy
    stats socket /run/haproxy/admin.sock mode 660 level admin expose-fd listeners
    stats timeout 30s
    user haproxy
    group haproxy
    daemon

defaults
    log global
    mode http
    option httplog
    option dontlognull
    timeout connect 5000
    timeout client 50000
    timeout server 50000

frontend http_front
    bind *:80
    default_backend http_back

backend http_back
    balance roundrobin
    server web-01 3.84.40.22:80 check
    server web-02 34.203.218.108:80 check
EOF

# Copy new configuration to correct location
sudo mv haproxy.cfg /etc/haproxy/haproxy.cfg

# Enable HAProxy to be started by init script
echo "ENABLED=1" | sudo tee -a /etc/default/haproxy > /dev/null

# Restart HAProxy service
sudo service haproxy restart

# Output required server names
echo "web-01"
echo "web-02"
